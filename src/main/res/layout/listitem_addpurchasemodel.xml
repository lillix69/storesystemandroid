<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    >
    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/seperator_line" />
    <RelativeLayout
        android:id="@+id/modelnameview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color">

        <TextView
            android:id="@+id/t1"
            style="@style/detail_title_text5"
            android:text="物料名称" />

        <TextView
            android:id="@+id/tv_materialname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/t1"
            android:layout_toLeftOf="@+id/tv_remove"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:textColor="@color/theme_grey"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_remove"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="移除"
            android:textColor="@color/theme_blue"
            android:textSize="17sp" />
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/modelspecview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color">

        <TextView
            style="@style/detail_title_text5"
            android:text="物料规格" />

        <TextView
            android:id="@+id/tv_modelspec"
            style="@style/detail_subtitle_text9"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ordermodelcodeview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:visibility="gone"
        >

        <TextView
            style="@style/detail_title_text5"
            android:text="对应库存型号" />

        <ImageView
            android:id="@+id/img1"
            style="@style/detail_arrow" />

        <TextView
            android:id="@+id/tv_ordermodelcode"
            style="@style/detail_subtitle_text8"
            android:layout_toLeftOf="@+id/img1"
            />
        <View
            android:id="@+id/line10"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/modelcodeview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color">

        <TextView
            style="@style/detail_title_text5"
            android:text="对应库存型号" />


        <TextView
            android:id="@+id/tv_modelcode"
            style="@style/detail_subtitle_text9"
            />
        <View
            android:id="@+id/line11"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scanview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
android:visibility="gone"
        >

        <TextView
            style="@style/detail_title_text5"
            android:text="入库数量(*)" />

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="扫一扫"
            android:textColor="@color/theme_green"
            android:textSize="15sp" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scancountview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
android:visibility="gone"
        >

        <TextView
            style="@style/detail_title_text5"
            android:text="已扫出库序列号" />

        <TextView
            android:id="@+id/tv_scancount"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="数量："
            android:textColor="@color/theme_grey"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/tv_showsns"
            />
        <TextView
            android:id="@+id/tv_showsns"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="查看"
            android:textColor="@color/theme_green"
            android:textSize="15sp" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/inputcountview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:visibility="gone"
        >

        <TextView
            style="@style/detail_title_text5"
            android:text="入库数量(*)" />

        <ImageView
            android:id="@+id/img2"
            style="@style/detail_arrow" />

        <EditText
            android:id="@+id/edt_count"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/img2"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:textColor="@color/theme_grey"
            android:textSize="15sp"
            android:hint="请输入入库数量"
            android:textColorHint="@color/sep_line"
            />
        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/costview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color">

        <TextView
            style="@style/detail_title_text5"
            android:text="采购单价(*)" />

        <ImageView
            android:id="@+id/img4"
            style="@style/detail_arrow" />

        <EditText
            android:id="@+id/edt_cost"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/img4"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:textColor="@color/theme_grey"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:hint="请输入采购单价"
            android:textColorHint="@color/sep_line"
            />
        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/supplyview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color">

        <TextView
            style="@style/detail_title_text5"
            android:text="选择供应商" />

        <ImageView
            android:id="@+id/img5"
            style="@style/detail_arrow" />

        <TextView
            android:id="@+id/tv_supply"
            style="@style/detail_subtitle_text8"
            android:layout_toLeftOf="@+id/img5"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/caigoucodeview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:visibility="gone"
        >
        <View
            android:id="@+id/line12"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:background="@color/seperator_line" />
        <TextView
            style="@style/detail_title_text5"
            android:text="采购单号" />

        <TextView
            android:id="@+id/tv_caigoucode"
            style="@style/detail_subtitle_text9"
            android:maxLines="1"
            android:ellipsize="end"

            />
        <View
            android:id="@+id/line9"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/seperator_line" />
    </RelativeLayout>
    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/seperator_line" />
</LinearLayout>
