<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我要反馈"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/i_back" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:layout_below="@+id/topview"
        android:layout_marginTop="15dp"
        android:id="@+id/titleview"
        >

        <TextView
            android:id="@+id/t1"
            android:layout_marginLeft="15dp"
            android:textColor="@color/theme_dark_grey"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="标题" />

        <ImageView
            android:id="@+id/img1"
            style="@style/detail_arrow" />

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/theme_light_grey"
            android:textSize="16sp"
            android:hint="请输入问题标题"
            android:textColorHint="@color/sep_line"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/t1"
            android:layout_toLeftOf="@+id/img1"
            android:layout_margin="7dp"
            android:background="@null"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="具体内容"
        android:layout_below="@+id/titleview"
        android:textColor="@color/theme_dark_grey"

        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/edt_describe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_below="@+id/t2"
        android:layout_above="@+id/tv_submit"
        android:background="@drawable/grey_border_textview"
        android:hint="请输入具体的问题描述"
        android:textColorHint="@color/sep_line"
        android:gravity="top"
        android:textColor="@color/theme_light_grey"
        android:textSize="16sp"
       android:padding="5dp"
        />
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/theme_red"
        />
</RelativeLayout>
