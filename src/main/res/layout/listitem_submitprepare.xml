<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/selectview"
        android:layout_width="30dp"
        android:layout_height="85dp"
        >

        <Button
            android:id="@+id/btn_select"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_choose_bg" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_modelname"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="37dp"
        android:gravity="center"
        android:textColor="@color/theme_dark_grey"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_modelspec"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_modelname"
        android:gravity="center"
        android:textColor="@color/theme_dark_grey"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_pos"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="37dp"
        android:layout_below="@+id/tv_modelname"
        android:textColor="@color/theme_dark_grey"
        android:textSize="15sp"

        />


    <RelativeLayout
        android:id="@+id/nosnsview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_pos"
        >
        <TextView
            android:id="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:textColor="@color/theme_dark_grey"
            android:textSize="15sp"
            android:text="需出库数量:"
            />
        <EditText
            android:id="@+id/edt_inputneedout"
            android:layout_width="53dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/t6"
            android:layout_marginLeft="5dp"
            android:textColor="@color/theme_dark_grey"
            android:textSize="14sp"
            android:inputType="number"
            android:hint="请输入"
            android:textColorHint="@color/sep_line"
android:background="@drawable/grey_border_button"
            />

        <View
             android:id="@+id/view_clear"
            android:layout_width="53dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/t6"
            android:layout_marginLeft="5dp"
                         android:background="@color/clear"
                          />
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/snsview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_below="@+id/tv_pos"
    android:visibility="invisible"
    >
    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/theme_dark_grey"
        android:textSize="15sp"
        android:text="需出库数量:"
        />
    <TextView
        android:id="@+id/tv_needout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/t4"
        android:textColor="@color/theme_dark_grey"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_needout"
        android:textColor="@color/theme_dark_grey"
        android:textSize="15sp"
        android:text="实际出库数量:"
        />
    <TextView
        android:id="@+id/tv_scanout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/t5"
        android:textColor="@color/theme_dark_grey"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_scanout"
        android:textColor="@color/theme_blue"
        android:textSize="15sp"
        android:text="展开序列号"
        />

    <TextView
        android:id="@+id/tv_showdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/theme_dark_grey"
        android:textSize="14sp"
        android:visibility="gone"

        />
</RelativeLayout>
</RelativeLayout>
