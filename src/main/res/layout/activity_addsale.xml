<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/theme_red"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增销售出库"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn_back"
            android:layout_marginLeft="15dp"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/i_back" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:layout_below="@+id/topview"
        >

        <TextView
            style="@style/detail_title_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="客户姓名(*)" />

        <EditText
            android:id="@+id/tv_clientname"
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:layout_toLeftOf="@+id/img3"
            android:background="@null"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/theme_grey"
            android:hint="请输入客户姓名"
            android:textColorHint="@color/sep_line"
            />
        <ImageView
            android:id="@+id/img3"
            style="@style/detail_arrow" />
    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_below="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperator_line" />
    <RelativeLayout
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:layout_below="@+id/line3"
        >

        <TextView
            style="@style/detail_title_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="客户手机(*)" />

        <EditText
            android:id="@+id/tv_clienttel"
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:layout_toLeftOf="@+id/img4"
            android:background="@null"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/theme_grey"
            android:hint="请输入客户手机"
            android:textColorHint="@color/sep_line"
            />
        <ImageView
            android:id="@+id/img4"
            style="@style/detail_arrow" />
    </RelativeLayout>
    <View
        android:id="@+id/line4"
        android:layout_below="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperator_line" />
    <RelativeLayout
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:layout_below="@+id/line4"
        >

        <TextView
            android:id="@+id/taddress"
            style="@style/detail_title_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收货地址" />
        <EditText
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img5"
            android:layout_toRightOf="@+id/taddress"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textColor="@color/theme_grey"
            android:hint="请输入收货地址"
            android:textColorHint="@color/sep_line"
            />
        <ImageView
            android:id="@+id/img5"
            style="@style/detail_arrow" />

    </RelativeLayout>
    <View
        android:id="@+id/line6"
        android:layout_below="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperator_line" />
    <RelativeLayout
        android:id="@+id/v6"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color"
        android:layout_below="@+id/line6"
        >

        <TextView
            android:id="@+id/tremark"
            style="@style/detail_title_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注" />
        <EditText
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_toLeftOf="@+id/img6"
            android:layout_toRightOf="@+id/tremark"
            android:background="@null"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/theme_grey"
            android:hint="请输入备注"
            android:textColorHint="@color/sep_line"
            />
        <ImageView
            android:id="@+id/img6"
            style="@style/detail_arrow" />

    </RelativeLayout>


    <View
        android:id="@+id/line5"
        android:layout_below="@+id/v6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperator_line" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/line5"
        android:text="订单物料信息"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/theme_dark_grey"
        />
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_below="@+id/line5"
        android:layout_alignParentRight="true"
        android:text="+添加物料"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/theme_red"
        />

    <ListView
        android:id="@+id/listview_models"
        android:background="@color/white"
        android:divider="@color/white"
        android:dividerHeight="4dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_add"
        android:layout_above="@+id/tv_confirm"
        />
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="创建销售出库单"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/theme_red"
        />

</RelativeLayout>
