<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下班报表"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/i_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/topview"
        android:layout_marginLeft="13dp"
        android:gravity="center"
        android:text="日期:"
        android:textColor="@color/theme_dark_grey"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/topview"
        android:layout_marginLeft="70dp"
        android:gravity="center_vertical"
        android:textColor="@color/theme_dark_grey"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/topview"
        android:layout_marginLeft="190dp"
        android:gravity="center_vertical"
        android:textColor="@color/theme_dark_grey"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="生产明细"
                android:textColor="@color/theme_green"
                android:textSize="20sp" />


            <ListView
                android:id="@+id/listview_produce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white"
                android:dividerHeight="0.1dp"
                />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:gravity="center"
                android:text="出库明细"
                android:textColor="@color/theme_red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_outtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="今日共完成出库"
                android:textColor="@color/theme_dark_grey"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/listview_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white"

                android:dividerHeight="0.1dp"
                />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="入库明细"
                android:textColor="@color/theme_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_intitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="今日共完成入库"
                android:textColor="@color/theme_dark_grey"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/listview_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white"
                android:dividerHeight="0.1dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
