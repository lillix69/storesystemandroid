<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:background="@color/theme_red"
        android:layout_height="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="采购入库"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filterview"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/topview"
        android:background="@color/date_color"

        >
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="物料型号关键字: "
            android:textColor="@color/theme_dark_grey"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:id="@+id/edt_keyword"
            android:layout_width="180dp"
            android:layout_height="28dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/t1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入物料型号关键字"
            android:paddingLeft="5dp"
            android:textColor="@color/theme_dark_grey"
            android:textColorHint="@color/sep_line"
            android:textSize="15sp" />
        <RelativeLayout
            android:id="@+id/dateview"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/t1"
            >
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="入库日期: "
                android:textColor="@color/theme_dark_grey"
                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/centerline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  至  "
                android:textColor="@color/theme_dark_grey"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/tv_begindate"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_begindate"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:textColor="@color/theme_dark_grey"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/t2"
                android:background="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"

                />
            <TextView
                android:id="@+id/tv_enddate"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:textColor="@color/theme_dark_grey"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/centerline"
                android:layout_centerVertical="true"
                android:background="@color/white"
                />
            <TextView
                android:id="@+id/tv_search"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@color/search_blue"
             android:layout_toRightOf="@+id/tv_enddate"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="130dp"
            android:layout_height="28dp"
          android:layout_below="@+id/dateview"
            android:text="采购到货入库"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@color/theme_green"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ListView
        android:visibility="gone"
        android:id="@+id/listview_purchase"
        android:layout_below="@+id/filterview"
        android:divider="@color/white"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:dividerHeight="5dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
    <TextView
        android:id="@+id/tv_nopower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="当前账号没有操作采购入库的权限"
        android:textSize="20sp"
        android:textColor="@color/theme_dark_grey"
        android:visibility="gone"
        />
</RelativeLayout>
