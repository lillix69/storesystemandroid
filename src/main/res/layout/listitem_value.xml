<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/bg_color"
    >
<TextView
    android:id="@+id/tv_modelname"
    android:layout_width="170dp"
    android:layout_height="30dp"
    android:layout_marginLeft="15dp"
    android:text="名称:"
    android:textColor="@color/theme_light_grey"
    android:gravity="center_vertical"
    android:textSize="15sp"
  android:maxLines="1"
    android:ellipsize="end"
    />
    <TextView
        android:id="@+id/tv_spec"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv_modelname"
        android:text="规格:"
        android:textColor="@color/theme_light_grey"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_lastprice"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_modelname"
        android:layout_marginLeft="15dp"
        android:text="最近成本单价:"
        android:textColor="@color/theme_light_grey"
        android:gravity="center_vertical"
        android:textSize="15sp"
        />
    <TextView
    android:id="@+id/tv_store"
    android:layout_width="170dp"
    android:layout_height="30dp"
    android:layout_below="@+id/tv_lastprice"
    android:layout_marginLeft="15dp"
    android:text="当前库存:"
    android:textColor="@color/theme_light_grey"
    android:gravity="center_vertical"
    android:textSize="15sp"
    />
    <TextView
        android:id="@+id/tv_storevalue"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_lastprice"
        android:layout_toRightOf="@+id/tv_store"
        android:layout_marginLeft="5dp"
        android:text="当前库存价值:"
        android:textColor="@color/theme_light_grey"
        android:gravity="center_vertical"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_out"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_store"
        android:layout_marginLeft="15dp"
        android:text="已出库:"
        android:textColor="@color/theme_light_grey"
        android:gravity="center_vertical"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_outvalue"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_store"
        android:layout_toRightOf="@+id/tv_out"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:text="已出库价值:"
        android:textColor="@color/theme_light_grey"
        android:gravity="center_vertical"
        android:textSize="15sp"
        />
</RelativeLayout>
