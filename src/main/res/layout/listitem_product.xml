<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/product_bg_color">
<TextView
    android:id="@+id/tv_index"
    android:layout_width="40dp"
    android:layout_height="35dp"
    android:textColor="@color/theme_dark_grey"
    android:textSize="17sp"
    android:gravity="center"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    />
    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/tv_index"
        >

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_position"
            android:textSize="17sp"
            android:textColor="@color/theme_dark_grey"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_position"
            style="@style/product_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_index"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/tv_index"
     >

        <TextView
            android:id="@+id/tv_name"
            style="@style/product_subtitle_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:layout_toLeftOf="@+id/line"
           android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/line"
            style="@style/product_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_typename"
            android:text="  |  类型: " />

        <TextView
            android:id="@+id/tv_typename"
            style="@style/product_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/title_storecount"
android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_storecount"
            style="@style/product_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/title_storecount"
            style="@style/product_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_storecount"
            android:text="库存: " />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/i_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:background="@color/seperator_line" />

    <RelativeLayout
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="73dp"
        android:paddingRight="20dp"
        >

        <TextView
            android:id="@+id/btn_look"
            style="@style/lookbutton_text_style"
            android:layout_width="67dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:text="盘库" />

        <TextView
            android:id="@+id/btn_in"
            style="@style/inbutton_text_style"
            android:layout_width="67dp"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_look"
            android:text="入库" />

        <TextView
            android:id="@+id/btn_out"
            style="@style/outbutton_text_style"
            android:layout_width="67dp"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_in"
            android:text="出库" />
        <TextView
            android:id="@+id/btn_pos"
            style="@style/posbutton_text_style"
            android:layout_width="67dp"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_out"
            android:text="同位置" />
    </RelativeLayout>

</RelativeLayout>
